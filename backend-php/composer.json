{
    "name": "belyanimda/backend-php",
    "description": "PHP Backend API for Municipality Services App",
    "type": "project",
    "version": "1.0.0",
    "license": "MIT",
    "authors": [
        {
            "name": "Belyanimda Team",
            "email": "info@belyanimda.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Belyanimda\\": "classes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Belyanimda\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "start": "php -S 0.0.0.0:3000 -t .",
        "start-dev": "php start-server.php",
        "serve": "php -S 0.0.0.0:3000 -t ."
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
